---
interface Props {
  value: string;
  text: string;
}

const { value, text }: Props = Astro.props;
---

<div class="flex flex-col text-center gap-1 2xl:self-end 2xl:text-left">
    <span class="text-2xl font-inter font-bold">{value}</span>
    <span class="uppercase font-lexend text-xs opacity-50 tracking-wider">{text}</span>
</div>